<!DOCTYPE html>
<html>
  <head>
    <title>UrushiMap2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="row height_100">
        <% if end_user_signed_in? %>
          <div class="col-auto my-auto ml-auto">
            <%= link_to "グループ作成", new_group_path, class: "btn btn-secondary btn-block" %>
          </div>
          <div class="col-auto my-auto">
            <%= link_to "マイページ", end_users_mypage_path, class: "btn btn-secondary btn-block" %>
          </div>

          <div class="col-auto my-auto">
            <%= link_to "グループ一覧", groups_path, class: "btn btn-secondary btn-block" %>
          </div>
          <div class="col-auto my-auto">
            <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: "btn btn-secondary btn-block" %>
          </div>

          <div class="col-auto my-auto mr-5">
            <button type="button" class="btn btn-secondary">未定</button>
          </div>
        <%elsif admin_signed_in? %>
          <div class="col-auto my-auto">
            <button type="button" class="btn btn-outline-success">未定</button>
          </div>

          <div class="col-auto my-auto">
            <button type="button" class="btn btn-outline-success">未定</button>
          </div>

          <div class="col-auto my-auto mr-5">
            <button type="button" class="btn btn-secondary">未定</button>
          </div>
        <%else%>
          <div class="col-auto my-auto ml-auto">
            <%= link_to "会員登録", new_end_user_registration_path, class: "btn btn-secondary btn-block" %>
          </div>
          <div class="col-auto my-auto">
            <%= link_to "ログイン", new_end_user_session_path, class: "btn btn-secondary btn-block" %>
          </div>

          <div class="col-auto my-auto">
            <button type="button" class="btn btn-outline-success">未定</button>
          </div>

          <div class="col-auto my-auto mr-5">
            <button type="button" class="btn btn-secondary">未定</button>
          </div>
        <%end%>
      </div>
    </header>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>