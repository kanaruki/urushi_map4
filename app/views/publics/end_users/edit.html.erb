<div class="row">
  <div class="col-auto offset-2 mt-5">
    <h2>マイページ編集</h2>
  </div>
</div>
<%= form_with model: @end_user, url: end_users_infomation_path(@end_user), local:true do |f| %>
  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>プロフィールアイコン</h5>
    </div>
    <div class="col-3">
      <%= f.attachment_field :image %>
      <%#= f.file_field :image %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>ニックネーム</h5>
    </div>
    <div class="col-3">
      <%= f.text_field :name,class: 'form-control',autofocus: true, autocomplete: "name" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>自己紹介</h5>
    </div>
    <div class="col-3">
      <%= f.text_area :introduction,class: 'form-control',autofocus: true, autocomplete: "introduction" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>メールアドレス</h5>
    </div>
    <div class="col-3">
      <%= f.text_field :email,class: 'form-control',autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>退会</h5>
    </div>
    <div class="col-3">
      <%= link_to end_users_confirm_path do %>
         <button type="button" class="btn btn-danger btn-block">退会</button>
      <%end%>
    </div>
  </div>
  <div class="row pb-5">
    <div class="col-2 mx-auto mt-5">
      <%= f.submit "マイページ変更", class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<%end%>