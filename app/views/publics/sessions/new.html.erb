<div class="row">
  <div class="col-auto offset-2 mt-5">
    <h2>ログイン</h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>メールアドレス</h5>
    </div>
    <div class="col-3">
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2 offset-3">
      <h5>パスワード</h5>
    </div>
    <div class="col-3">
      <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 mx-auto mt-5 marginbottom">
      <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<%end%>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>


<%#= render "publics/shared/links" %>

